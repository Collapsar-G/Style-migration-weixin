<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">新建图片</view>
</cu-custom>
<image class='background' src='../../icon/bk.png' mode="aspectFill"></image>

<button type="primary" bindtap="getLocalImage">拍照</button>
<view>预览</view>
<image mode="widthFix" src="{{src}}"></image>



<view class="theStyle">
    <swiper class="card-swiper"  duration="500" bindchange="cardSwiper" >
        <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
            <view class="swiper-item">
            <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>    </view>
        </swiper-item>
    </swiper>
</view>