.background {
    width: 100%;
    height: 100%;
    position:fixed;
    background-size: 100% 100%;
    z-index: -2;
}
.theStyle{
    width: 100%;
    padding: 20rpx 0;
    background-color: #f1f1f1;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;

}
.background2 {
    width: 710rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    border-radius: 30px;
    position:fixed;
    z-index: -1;
}

.showBtn{
    display: flex;
    flex-direction: row;
}
.certain{
    width:100rpx;
    position: fixed;
    margin-left: 60rpx;
    z-index: 5;
}
.close{
    width:100rpx;
    position:fixed;
    margin-left: 590rpx;
    z-index: 5;
}
.padding{
    position: fixed;
	top: 0;
	right: 0;
	bottom: 140rpx;
	left: 0;
	margin: auto;
	width: 100%;
	height: 260rpx;
	border-radius: 10rpx;
    background-color: #303031;
	box-shadow: 0 0 0rpx 2000rpx rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
	font-size: 28rpx;
	z-index: 9999;
	line-height: 2.4em;
    overflow: hidden;
}
.logg{
    color: #ffff;
    font-weight: bold;

}
.name{
    left: 0;
    right: 0;
    bottom: 50rpx;
    text-align: center;
    margin-left: 82rpx;
    border-radius: 20rpx;
    font-weight:bold;
    position:relative;
    opacity: 0.7;
}
.bg {
    display: none;
    position: absolute;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 9998;
    -moz-opacity: 0.7;
    opacity: 0.70;
    filter: alpha(opacity=70);
}
.body-view{
    display: flex;
    flex-direction: column;
}
.alpha{
    display: flex;
    justify-content: center;
    font-weight: bold;
    opacity: 0.7;
}